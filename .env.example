# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# HTTP Settings
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Echo Settings
SERVER_DEBUG_MODE=true

SERVER_JWT_SECRET=test-jwt-secret

# Database Configuration
DATABASE_DSN=postgres://user:pass@127.0.0.1:5432/db_name?sslmode=disable
DATABASE_USER=user
DATABASE_PASSWORD=pass
DATABASE_NAME=db_name
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=10
DATABASE_CONN_MAX_LIFETIME=60m
DATABASE_CONN_MAX_IDLE_LIFETIME=10m
DATABASE_CONNECTION_TIMEOUT=15s
DATABASE_HEALTH_CHECK_PERIOD=10s

# Logger Configuration
LOGGER_LEVEL=debug
LOGGER_NO_COLOR=false
LOGGER_TIME_FORMAT=2006-01-02T15:04:05Z
LOGGER_TIME_LOCATION=UTC
LOGGER_PARTS_ORDER=time,level,logger,message
LOGGER_PARTS_EXCLUDE=
LOGGER_FIELDS_ORDER=
LOGGER_FIELDS_EXCLUDE=
LOGGER_LOGS_DIR=./logs